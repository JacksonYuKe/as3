<div class="container">
  <h1 class="text-center mt-4 page-title">Cat Breeds</h1>

  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <form class="form-inline d-flex flex-wrap justify-content-center my-3 search-form">
        <input type="text" name="query" class="form-control flex-grow-1 mb-2 mb-md-0 mr-md-2 search-input" placeholder="Search cat breeds">
        <button type="submit" class="btn btn-primary search-button">Search</button>
      </form>
    </div>
  </div>

  <div class="table-responsive">
    <table class="table table-striped custom-table">
      <thead class="thead-dark d-none d-md-table-header-group">
        <tr>
          <th>Name</th>
          <th>Image</th>
          <th>Details</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
          <tr class="d-block d-md-table-row custom-row">
            <!-- Name -->
            <td class="d-block d-md-table-cell text-center font-weight-bold custom-name">
              <%= item.name %>
            </td>
            
            <!-- Image -->
            <td class="d-block d-md-table-cell text-center custom-image">
                <%= image_tag item.image_url, class: "img-thumbnail", alt: item.name %>
            </td>
            
            <!-- Details -->
            <td class="d-block d-md-table-cell text-center custom-details">
              <a href="<%= items_details_path(name: item.name) %>" class="btn btn-info btn-sm custom-btn">View Details</a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
